{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "approvalMode": {
      "type": "string",
      "enum": ["webhook", "email", "slack"],
      "default": "webhook",
      "description": "How to request approval"
    },
    "message": {
      "type": "string",
      "description": "Approval request message"
    },
    "approvers": {
      "type": "array",
      "items": { "type": "string", "format": "email" },
      "description": "Email addresses of approvers"
    },
    "requireAll": {
      "type": "boolean",
      "default": false,
      "description": "Require all approvers to approve"
    },
    "timeout": {
      "type": "integer",
      "minimum": 60,
      "maximum": 2592000,
      "default": 86400,
      "description": "Approval timeout in seconds"
    },
    "timeoutAction": {
      "type": "string",
      "enum": ["approve", "reject", "fail"],
      "default": "reject",
      "description": "Action when timeout is reached"
    },
    "webhookUrl": {
      "type": "string",
      "format": "uri",
      "description": "Webhook URL for approval response"
    }
  },
  "required": ["message"]
}
