{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "template": {
      "type": "string",
      "description": "Prompt template with {{variable}} placeholders"
    },
    "templateEngine": {
      "type": "string",
      "enum": ["mustache", "handlebars", "jinja2"],
      "default": "mustache",
      "description": "Template engine to use"
    },
    "variables": {
      "type": "object",
      "description": "Variable values to inject"
    },
    "escapeHtml": {
      "type": "boolean",
      "default": false,
      "description": "Escape HTML in variables"
    }
  },
  "required": ["template"]
}
