{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "jsCode": {
      "type": "string",
      "description": "JavaScript code to execute (use 'return' to output result)"
    },
    "runOnceForAllItems": {
      "type": "boolean",
      "default": false,
      "description": "Run code once for all items instead of per-item"
    },
    "allowedModules": {
      "type": "array",
      "items": { "type": "string" },
      "default": ["lodash", "moment", "axios"],
      "description": "Allowed npm modules"
    },
    "timeout": {
      "type": "integer",
      "minimum": 1,
      "maximum": 60,
      "default": 10,
      "description": "Execution timeout in seconds"
    }
  },
  "required": ["jsCode"]
}
