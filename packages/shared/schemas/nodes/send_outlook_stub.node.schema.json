{
  "$id": "https://yourdomain.dev/schemas/nodes/send_outlook_stub.node.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Send Outlook Stub Config",
  "type": "object",
  "required": ["to", "subject", "body"],
  "properties": {
    "to": { "type": "string", "format": "email" },
    "subject": { "type": "string", "minLength": 1 },
    "body": { "type": "string", "minLength": 1 },
    "importance": { "type": "string", "enum": ["low", "normal", "high"], "default": "normal" },
    "x-ui": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": false
}
