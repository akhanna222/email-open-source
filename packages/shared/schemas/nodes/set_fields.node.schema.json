{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["manual", "jsonata"],
      "default": "manual",
      "description": "Field setting mode"
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "operation": {
            "type": "string",
            "enum": ["set", "remove", "rename"]
          },
          "name": { "type": "string" },
          "value": { "type": "string" },
          "newName": { "type": "string" }
        }
      },
      "description": "Field operations to perform"
    },
    "jsonataExpression": {
      "type": "string",
      "description": "JSONata transformation expression"
    },
    "includeOtherFields": {
      "type": "boolean",
      "default": true,
      "description": "Include fields not explicitly set/removed"
    }
  }
}
