{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "provider": {
      "type": "string",
      "enum": ["openai", "anthropic", "google", "deepseek", "custom"],
      "default": "openai",
      "description": "LLM provider"
    },
    "model": {
      "type": "string",
      "description": "Model name (e.g., gpt-4, claude-3-opus, gemini-pro)"
    },
    "apiKey": {
      "type": "string",
      "format": "password",
      "description": "API key for the LLM provider"
    },
    "apiEndpoint": {
      "type": "string",
      "format": "uri",
      "description": "Custom API endpoint (for custom provider)"
    },
    "systemPrompt": {
      "type": "string",
      "description": "System prompt to set AI behavior"
    },
    "temperature": {
      "type": "number",
      "minimum": 0,
      "maximum": 2,
      "default": 0.7,
      "description": "Sampling temperature (0 = deterministic, 2 = very random)"
    },
    "maxTokens": {
      "type": "integer",
      "minimum": 1,
      "maximum": 32000,
      "default": 1000,
      "description": "Maximum tokens in response"
    },
    "topP": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "default": 1,
      "description": "Nucleus sampling (top-p)"
    },
    "frequencyPenalty": {
      "type": "number",
      "minimum": -2,
      "maximum": 2,
      "default": 0,
      "description": "Frequency penalty (-2 to 2)"
    },
    "presencePenalty": {
      "type": "number",
      "minimum": -2,
      "maximum": 2,
      "default": 0,
      "description": "Presence penalty (-2 to 2)"
    },
    "jsonMode": {
      "type": "boolean",
      "default": false,
      "description": "Force JSON output (for supported models)"
    },
    "jsonSchema": {
      "type": "object",
      "description": "JSON schema for structured output"
    },
    "stopSequences": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Stop sequences to end generation"
    }
  },
  "required": ["provider", "apiKey"]
}
