{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["key", "semantic", "list"],
      "default": "key",
      "description": "Retrieval mode"
    },
    "key": {
      "type": "string",
      "description": "Memory key to retrieve (for key mode)"
    },
    "query": {
      "type": "string",
      "description": "Semantic search query (for semantic mode)"
    },
    "namespace": {
      "type": "string",
      "default": "default",
      "description": "Memory namespace to search"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 10,
      "description": "Maximum results to return"
    },
    "similarityThreshold": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "default": 0.7,
      "description": "Minimum similarity score (0-1)"
    }
  },
  "required": ["mode"]
}
