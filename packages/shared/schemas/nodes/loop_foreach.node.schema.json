{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "batchSize": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1000,
      "default": 1,
      "description": "Number of items to process per batch"
    },
    "maxItems": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10000,
      "default": 1000,
      "description": "Maximum items to process (safety limit)"
    },
    "continueOnError": {
      "type": "boolean",
      "default": false,
      "description": "Continue loop if an item fails"
    }
  }
}
