{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "model": {
      "type": "string",
      "enum": ["gemini-pro", "gemini-pro-vision"],
      "default": "gemini-pro",
      "description": "Gemini model to use"
    },
    "api_key": {
      "type": "string",
      "description": "Google AI API key",
      "format": "password"
    },
    "temperature": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "default": 0.7,
      "description": "Sampling temperature"
    },
    "max_tokens": {
      "type": "integer",
      "minimum": 1,
      "maximum": 2048,
      "default": 1024,
      "description": "Maximum tokens in response"
    }
  },
  "required": ["api_key"]
}
