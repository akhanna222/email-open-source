{
  "$id": "https://yourdomain.dev/schemas/nodes/send_gmail_stub.node.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Send Gmail Stub Config",
  "type": "object",
  "required": ["to", "subject", "body"],
