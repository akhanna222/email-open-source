{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "dataPropertyName": {
      "type": "string",
      "description": "Property to evaluate (e.g., 'data.status')"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "outputKey": { "type": "string" },
          "operation": {
            "type": "string",
            "enum": ["equals", "notEquals", "contains", "regex", "greaterThan", "lessThan"]
          },
          "value": { "type": "string" }
        }
      },
      "description": "Routing rules (evaluated in order)"
    },
    "fallbackOutput": {
      "type": "string",
      "default": "default",
      "description": "Output name when no rules match"
    }
  },
  "required": ["dataPropertyName", "rules"]
}
