{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "authentication": {
      "type": "string",
      "enum": ["apiKey", "cloudAPI"],
      "default": "cloudAPI",
      "description": "WhatsApp Business API authentication method"
    },
    "apiKey": {
      "type": "string",
      "format": "password",
      "description": "WhatsApp Business API key"
    },
    "phoneNumberId": {
      "type": "string",
      "description": "WhatsApp Business Phone Number ID"
    },
    "accessToken": {
      "type": "string",
      "format": "password",
      "description": "WhatsApp Cloud API Access Token"
    },
    "to": {
      "type": "string",
      "description": "Recipient phone number (with country code, e.g., +1234567890)"
    },
    "messageType": {
      "type": "string",
      "enum": ["text", "template", "image", "document", "audio", "video"],
      "default": "text",
      "description": "Type of message to send"
    },
    "text": {
      "type": "string",
      "description": "Message text content"
    },
    "templateName": {
      "type": "string",
      "description": "WhatsApp approved template name"
    },
    "templateParams": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Template parameter values"
    },
    "mediaUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL of media file (for image/video/document/audio)"
    },
    "caption": {
      "type": "string",
      "description": "Caption for media messages"
    },
    "filename": {
      "type": "string",
      "description": "Filename for document messages"
    }
  },
  "required": ["authentication", "phoneNumberId", "to", "messageType"]
}
