{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "method": {
      "type": "string",
      "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS"],
      "default": "GET",
      "description": "HTTP method"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Request URL"
    },
    "authentication": {
      "type": "string",
      "enum": ["none", "basicAuth", "digestAuth", "headerAuth", "oAuth2", "bearerToken"],
      "default": "none",
      "description": "Authentication method"
    },
    "username": {
      "type": "string",
      "description": "Username (for basic/digest auth)"
    },
    "password": {
      "type": "string",
      "format": "password",
      "description": "Password (for basic/digest auth)"
    },
    "bearerToken": {
      "type": "string",
      "format": "password",
      "description": "Bearer token"
    },
    "headers": {
      "type": "object",
      "description": "Custom headers (key-value pairs)"
    },
    "queryParameters": {
      "type": "object",
      "description": "Query parameters (key-value pairs)"
    },
    "body": {
      "type": "string",
      "description": "Request body"
    },
    "bodyFormat": {
      "type": "string",
      "enum": ["json", "form", "raw", "multipart"],
      "default": "json",
      "description": "Body format"
    },
    "timeout": {
      "type": "integer",
      "minimum": 1,
      "maximum": 300,
      "default": 30,
      "description": "Request timeout in seconds"
    },
    "followRedirects": {
      "type": "boolean",
      "default": true,
      "description": "Follow HTTP redirects"
    },
    "responseFormat": {
      "type": "string",
      "enum": ["json", "text", "binary"],
      "default": "json",
      "description": "Expected response format"
    },
    "ssl": {
      "type": "object",
      "properties": {
        "verifyCertificates": { "type": "boolean", "default": true },
        "clientCertificate": { "type": "string" },
        "clientKey": { "type": "string", "format": "password" }
      }
    }
  },
  "required": ["method", "url"]
}
