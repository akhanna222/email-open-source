{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "threadIdField": {
      "type": "string",
      "default": "threadId",
      "description": "Field containing thread/conversation ID"
    },
    "storageBackend": {
      "type": "string",
      "enum": ["memory", "redis", "postgres"],
      "default": "memory",
      "description": "Where to store thread mappings"
    },
    "ttl": {
      "type": "integer",
      "minimum": 0,
      "default": 86400,
      "description": "Thread mapping TTL in seconds (0 = no expiration)"
    },
    "createNewThread": {
      "type": "boolean",
      "default": true,
      "description": "Create new thread if not found"
    }
  }
}
